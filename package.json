{
  "name": "rx-graphql-client",
  "version": "1.4.0",
  "description": "rxjs graphql client",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "build:lib": "npm run lint && npm run test:cov && npm run build",
    "pack:lib": "npm run build:lib && npm pack",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "keywords": [
    "rxjs",
    "graphql",
    "client",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ValeriyRadchenko/rx-graphql-client"
  },
  "bugs": {
    "url": "https://github.com/ValeriyRadchenko/rx-graphql-client/issues"
  },
  "engines": {
    "node": ">= 12.14"
  },
  "files": [
    "/dist"
  ],
  "readmeFilename": "README.md",
  "author": "Valerii Radchenko",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/node_modules/**",
      "!**/mocks/**",
      "!**/*.mock.ts",
      "!**/dist/**",
      "!**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testEnvironment": "node"
  },
  "peerDependencies": {
    "axios": "^1.5.1",
    "rxjs": "^6.5.5"
  }
}
